{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Custom circle sizing */
  .circle-collection-item {
    --mobile-size: {{ section.settings.mobile_circle_size }}px;
    --desktop-size: {{ section.settings.desktop_circle_size }}px;
  }

  .circle-collection-item {
    /* Existing variables */
    --mobile-size: {{ section.settings.mobile_circle_size }}px;
    --desktop-size: {{ section.settings.desktop_circle_size }}px;

    /* New variables */
    --title-size-mobile: {{ section.settings.title_font_size_mobile }}px;
    --title-size-desktop: {{ section.settings.title_font_size_desktop }}px;
    --title-weight: {{ section.settings.title_font_weight }};
    --title-margin-top: {{ section.settings.title_margin_top }}px;
    --text-color: {{ section.settings.text_color }};
    }

  .circle-collection-image {
    width: var(--mobile-size);
    height: var(--mobile-size);
  }

  @media (min-width: 750px) {
    .circle-collection-image {
      width: var(--desktop-size);
      height: var(--desktop-size);
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} isolate gradient">
  <div class="section-{{ section.id }}-padding">
    <div class="page-width">
      {%- if section.settings.title != blank -%}
        <h2 class="{{ section.settings.heading_size }} font-bold mb-8 text-center">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}

      <div class="flex flex-wrap justify-center gap-4 md:gap-8">
        {%- assign selected_collections = section.settings.collections -%}
        {%- assign title_override_lines = section.settings.custom_titles_overrides
          | default: ''
          | replace: '</p><p>', '||LINE||'
          | replace: '<br />', '||LINE||'
          | replace: '<br>', '||LINE||'
          | replace: '<p>', ''
          | replace: '</p>', '||LINE||'
          | strip_html
          | split: '||LINE||'
        -%}

        {%- if selected_collections != blank -%}
          {%- for collection in selected_collections -%}
            {%- assign display_title = collection.title -%}
            {%- assign index_str = forloop.index | append: '' -%}

            {%- for line in title_override_lines -%}
              {%- assign cleaned_line = line | strip -%}
              {%- if cleaned_line == blank -%}
                {%- continue -%}
              {%- endif -%}

              {%- assign override_index = cleaned_line | split: ':' | first | strip -%}
              {%- if override_index == index_str -%}
                {%- assign override_title = cleaned_line
                  | remove_first: override_index
                  | remove_first: ':'
                  | strip
                -%}
                {%- if override_title != blank -%}
                  {%- assign display_title = override_title -%}
                {%- endif -%}
              {%- endif -%}
            {%- endfor -%}

            <div class="circle-collection-item flex flex-col items-center mx-2">
              <a href="{{ collection.url }}" class="block text-center">
                <div class="circle-collection-image relative rounded-full overflow-hidden mb-3 transition-transform duration-300 hover:scale-105 flex items-center justify-center">
                  {%- if collection.featured_image -%}
                    {{
                      collection.featured_image
                      | image_url: width: 500
                      | image_tag:
                        loading: 'lazy',
                        sizes: '(min-width: 750px) var(--desktop-size), var(--mobile-size)',
                        widths: '165, 360, 535, 750, 1070, 1500',
                        class: 'w-full h-full object-cover'
                    }}
                  {%- else -%}
                    <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                      {{
                        'collection-'
                        | append: forloop.index
                        | placeholder_svg_tag: 'w-1/2 h-1/2'
                      }}
                    </div>
                  {%- endif -%}
                </div>
                <h3 class="font-[var(--title-weight)] mt-[var(--title-margin-top)] text-[length:var(--title-size-mobile)] md:text-[length:var(--title-size-desktop)] text-[var(--text-color)]">
                  {{ display_title }}
                </h3>
              </a>
            </div>
          {%- endfor -%}
        {%- else -%}
          {%- for block in section.blocks -%}
            {%- assign collection = collections[block.settings.collection] -%}
            {%- if collection == blank -%}
              {%- continue -%}
            {%- endif -%}

            <div
              class="circle-collection-item flex flex-col items-center mx-2"
              {{ block.shopify_attributes }}
            >
              <a href="{{ collection.url }}" class="block text-center">
                <div class="circle-collection-image relative rounded-full overflow-hidden mb-3 transition-transform duration-300 hover:scale-105 flex items-center justify-center">
                  {%- if block.settings.image != blank -%}
                    {{
                      block.settings.image
                      | image_url: width: 500
                      | image_tag:
                        loading: 'lazy',
                        sizes: '(min-width: 750px) var(--desktop-size), var(--mobile-size)',
                        widths: '165, 360, 535, 750, 1070, 1500',
                        class: 'w-full h-full object-cover'
                    }}
                  {%- elsif collection.featured_image -%}
                    {{
                      collection.featured_image
                      | image_url: width: 500
                      | image_tag:
                        loading: 'lazy',
                        sizes: '(min-width: 750px) var(--desktop-size), var(--mobile-size)',
                        widths: '165, 360, 535, 750, 1070, 1500',
                        class: 'w-full h-full object-cover'
                    }}
                  {%- else -%}
                    <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                      {{
                        'collection-'
                        | append: forloop.index
                        | placeholder_svg_tag: 'w-1/2 h-1/2'
                      }}
                    </div>
                  {%- endif -%}
                </div>
                <h3 class="font-[var(--title-weight)] mt-[var(--title-margin-top)] text-[length:var(--title-size-mobile)] md:text-[length:var(--title-size-desktop)] text-[var(--text-color)]">
                  {%- if block.settings.title != blank -%}
                    {{ block.settings.title }}
                  {%- else -%}
                    {{ collection.title }}
                  {%- endif -%}
                </h3>
              </a>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

